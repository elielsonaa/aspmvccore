@model copave.Models.Maquina

@{
    ViewData["Title"] = "Editar Cadastro";
}

<br>
<h4>Alteração de Maquinas</h4>
<hr />
<div class="row justify-content-md-center">
    <div class="row justify-content-md-center">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="TipoId" class="form-control" asp-items="ViewBag.TipoId"></select>
                <span asp-validation-for="TipoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instalacao" class="control-label"></label>
                <input asp-for="Instalacao" class="form-control" id="datepicker" />
                <span asp-validation-for="Instalacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" data-thousands="." data-decimal=","  type="currency" id="valor" class="form-control"/>
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <input type="submit" asp-action ="Index" value="Cancelar" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
<script>
   $(document).ready(function(){
      $("#valor").maskMoney();
   });
</script>
}